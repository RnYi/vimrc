let g:vimrc_home=expand('<sfile>:p:h')
let g:init_home=g:vimrc_home.'/init'
let g:node_host_prog='C:/Users/Richard/AppData/Roaming/npm/node_modules/neovim'
let g:repo_url='https://github.com.cnpmjs.org'
let g:comp_plug='coc'
if has('windows')
  let g:sys_uname='win'
else
  let g:sys_uname='unix'
endif
if has('nvim')
  exe 'set runtimepath^='.g:vimrc_home
  exe 'set runtimepath+='.g:vimrc_home.'/after'
  " load config of GUI
  function s:guiconf(name) abort
    exe 'so '.g:init_home.'/'.a:name.'.vim'
  endfunction
  if exists('g:nvui')
    call s:guiconf('nvui')
  endif
  let g:comp_plug='nvim-cmp'
  lua require('init')
else
  let &pythonthreedll='python39.dll'
  if !exists('g:bundle_group')
    let g:bundle_group=['basic', 'textobj', 'tags']
  endif
  runtime rany.vim
endif
