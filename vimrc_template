" vimrc home
let g:vimrc_home=expand('<sfile>:p:h')
let g:init_home=g:vimrc_home.'/init'
" mirror of github
let g:repo_url='https://github.com.cnpmjs.org'
" completion plug
let g:comp_plug='coc'
" language
let g:node_host_prog='C:/ProgramData/scoop/persist/nodejs/bin/node_modules/neovim'
if has('windows')
  let g:sys_uname='win'
else
  let g:sys_uname='unix'
endif
if has('nvim')
  exe 'set runtimepath^='.g:vimrc_home
  exe 'set runtimepath+='.g:vimrc_home.'/after'
  " load config of GUI
  function s:guiconf(name) abort
    exe 'so '.g:init_home.'/'.a:name.'.vim'
  endfunction
  if exists('g:nvui')
    call s:guiconf('nvui')
  endif
  lua require('init')
else
  let &pythonthreedll='python310.dll'
  if !exists('g:bundle_group')
    let g:bundle_group=['basic', 'textobj', 'tags']
  endif
  runtime rany.vim
endif
